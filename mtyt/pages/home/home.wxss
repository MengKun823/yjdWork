}
.pastDate{
  display: block;
  width: 230rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-family: 'PingFangSC-Regular';
  font-size: 26rpx;
  color: rgba(0,0,0,0.40);
  letter-spacing: 0.14rpx;
  margin-top: 20rpx;
}
.pastImage{
  display: inline-block;
  width: 280rpx;
  height: 200rpx;
  position: absolute;
  right: 32rpx;
  top: 42rpx;
}
.pastAnswerPeople{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  font-family: 'PingFangSC-Regular';
  font-size: 28rpx;
