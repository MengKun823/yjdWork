/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
button::after{
  border: none;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.question-bg{
  display: block;
  width: 750rpx;
  height: 480rpx;
}
.question-form{
  display: block;
   width: 750rpx;
  height: 480rpx; 
  position: absolute;
  top: 0;
  text-align: center;
}
.question-first{
  display: block;
  width: 750rpx;
  height: 480rpx;
  background: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 0;
  z-index: 10;
  text-align: center;
}
.homeTap{
  margin: 0;
  padding: 0;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 480rpx;
  background: transparent;
}
.question-date{
  display: inline-block;
  width: 200rpx;
  height: 124rpx;
  background: rgba(0,0,0,0.80);
  border-radius: 0 0 12rpx 12rpx;
  position: absolute;
  left: 32rpx;
}
.question-ymd{
  display: inline-block;
  position: absolute; 
  text-align: center;
  font-family: "PingFangSC-Regular";
  font-size: 22rpx;
  color: #FFFFFF;
  letter-spacing: 0.07rpx;
}
.question-year{  
  width: 62rpx;
  height: 40rpx;
  line-height: 40rpx;
  top: 22rpx;
  left: 28rpx;
}
.question-month{
  width: 62rpx;
  height: 40rpx;
  line-height: 40rpx;
  top: 62rpx;
  left: 28rpx;
}
.question-dat{
  letter-spacing: 0.16rpx;
  font-size: 60rpx;
  width: 70rpx;
  height: 84rpx;
  line-height: 84rpx;
  top: 20rpx;
  right: 28rpx;
}

.question-text{
  font-family: 'PingFangSC-Semibold';
  font-size: 36rpx;
  color: #FFFFFF;
  letter-spacing: 0.24rpx;
  display: inline-block;
  width: 630rpx;
  height: 130rpx;
  line-height: 65rpx;
  position: relative;
  top: 180rpx;
  text-align: left;
}
.question-num{
  font-family: 'PingFangSC-Regular';
  color: #fff;
  display: inline-block;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  position: absolute;
  left: 60rpx;
  bottom: 72rpx;
}
.Go-to-answer{
  font-family: 'PingFangSC-Semibold';
  display: inline-block;
  width: 180rpx;
  height: 64rpx;
  letter-spacing: 0.14rpx;
  color: #fff;
  font-size: 28rpx;
  background-image: linear-gradient(131deg, #1D73FF 0%, #27ADFF 100%);
  border-radius: 32rpx;
  text-align: center;
  line-height: 64rpx;
  position: absolute;
  right: 60rpx;
  bottom: 60rpx;
}
.accomplishT{
  background: none;
}
.accomplish{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 10rpx;
  left: 5rpx;
}
.accomplishText{
  display: inline-block;
  color: #1F7CFF;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
}
.pastrecords{
  display: block;
  width: 100%;
  /* height: 1000rpx; */
}
.past-records{
  display: block;
  width: 100%;
  height: 340rpx;
  position: relative;
  font-size: 0;
}
 .past-records-btn{
  margin: 0;
  padding: 0;
  display: block;
  width: 100%;
  height: 340rpx;
  position: absolute;
  top: 0;
  z-index: 100;
  background: transparent;
} 
.pastTopic{
  word-break: break-all;
  display: inline-block;
  width: 370rpx;
  line-height: 50rpx;
  font-family: 'PingFangSC-Medium';
