.pastRemind{
  display: inline-block;
  /* width: 240rpx; */
  height: 40rpx;
  line-height: 40rpx;
  font-family: 'PingFangSC-Regular';
  font-size: 28rpx;
  color: rgba(77,96,112,0.60);
  letter-spacing: 0;
  position: absolute;
  right: 55rpx;
  top: 270rpx;
}
.fenge{
  display: inline-block;
  width: 684rpx;
  text-align: center;
  position: absolute; 
  bottom: 5rpx;
  left: 33rpx;
  right: 33rpx;
  border-bottom: 1rpx solid #D0D0D0;
}
.more{
  display: block;
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  font-family: 'PingFangSC-Medium';
  font-size: 30rpx;
  color: #14BDF6;
  letter-spacing: 0;
}
.homeMask{
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
}
.homeMask-btn{
  margin: 0;
  padding: 0;
  display: block;
  width: 100%;
  height: 100%;
  background: transparent;
}