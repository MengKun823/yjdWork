/* pages/mine/remind/remind.wxss */
.remindBox{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 1206rpx;
  background-color: #efefef;
}
.remindText{
  font-family: 'PingFangSC-Regular';
  width: 500rpx;
  font-size: 28rpx;
  color: rgba(0,0,0,0.40);
  letter-spacing: 0.14rpx;
  margin-top: 28rpx;
  margin-left: 40rpx;
}
.remindCell{
  display: flex;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-family: 'PingFangSC-Regular';
  font-size: 32rpx;
  color: #000000;
  letter-spacing: 0.16rpx;
  margin-top: 8rpx;
}
.remindLabel{
  margin-left: 40rpx;
}
.remindInput{
  display: inline-block;
  width: 100rpx;
  height: 90rpx;
  color: #14BDF6;
  font-family: 'PingFangSC-Medium';
}
.remindBtn{
  display: inline-block;
  width: 100rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-right: 20rpx;
}